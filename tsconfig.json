{
    "compilerOptions": {
    "target": "esnext",
        "module": "esnext",
        "strict": false,
        "noImplicitAny": false,
        "jsx": "preserve",
        "importHelpers": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [],
        "paths": {
        "@/*": ["src/*"],
            "preact/*": ["stub/empty.d.ts"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
},
    "include": ["src/**/*.ts", "src/**/*.vue"],
    "exclude": ["node_modules"]
}